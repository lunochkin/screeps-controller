{
  "name": "screeps-controller",
  "version": "1.0.0",
  "description": "A controller for managing Screeps game automation and scripts",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:dev": "npm run build:dev && node scripts/deploy.js",
    "deploy:local": "SCREEPS_TARGET=local npm run build && node scripts/deploy.js",
    "deploy:local:dev": "SCREEPS_TARGET=local npm run build:dev && node scripts/deploy.js",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "start": "make up"
  },
  "keywords": [
    "screeps",
    "game",
    "automation",
    "controller"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/node": "^24.3.0",
    "babel-loader": "^9.1.3",
    "dotenv": "^16.3.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
